pipeline {

    agent any
    stages {
        stage('Fetch') {
            steps {
                script {
                    git branch 'second_assignment' url: 'https://github.com/droidLight/devops_training.git'
                }
            }
        }
        stage ('Deploy') {
            steps {
                script {
                    sh "git branch"
                    echo "Deploying container...."
                    sh "docker compose up"
                }
            }
        }
    }
}